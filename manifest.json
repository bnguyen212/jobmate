{
  "name": "JobMate",
  "version": "1.1",
  "description": "Parse job information and save it to Airtable",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "*://*/*"
    ],
    "js": ["assets/jquery-3.3.1.min.js", "contentScript.js"]
  }],
  "browser_action": {
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "offline_enabled": false,
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "128": "assets/icon.png"
  },
  "manifest_version": 2
}